@page "/Home"
@page "/"

@if (this.Articles == null)
{
    this.LayoutManager.ShowPageLoading();
}
else
{
    this.LayoutManager.HidePageLoading();

    foreach (var article in this.Articles)
    {
        <Card>
            <CardBody>
                <CardTitle Size="5">@article.Title</CardTitle>
                <CardText>
                    @article.Content.Substring(0,100)
                </CardText>
            </CardBody>
        </Card>
    }

}
